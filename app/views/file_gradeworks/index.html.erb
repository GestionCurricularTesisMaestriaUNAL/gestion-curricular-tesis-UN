<p id="notice"><%= notice %></p>

<h1>File Gradeworks</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nombre archivo</th>
      <th>Path</th>
      <th>Description</th>
      <th>Size (bytes)</th>
      <th>Gradework</th>
      <th>FileGradework</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_gradeworks.each do |file_gradework| %>
      <tr>
        <td><%= file_gradework.gradework.name %></td>
        <td><%= file_gradework.gradework.file_identifier %></td>
        <td><%= file_gradework.gradework.file_url %></td>
        <td><%= file_gradework.description %></td>
        <td><%= file_gradework.gradework.file.size %></td>
        <td><%= file_gradework.gradework_id %></td>
        <td><%= link_to('abrir', file_gradework.gradework.file_url) if file_gradework.gradework.file_url  %></td>
        <td><%= link_to 'Show', file_gradework %></td>
        <td><%= link_to 'Edit', edit_file_gradework_path(file_gradework) %></td>
        <td><%= link_to 'Destroy', file_gradework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New File Gradework', new_file_gradework_path %>
