
<div id="page" class="container-fluid contenedorprincipal" >
    <section role="main-content">       

        <div class="breadcrumb-class">
            Está en:&nbsp;
            <a href="../" target="_self" title="Inicio">Inicio</a>&nbsp;&nbsp;/&nbsp;&nbsp;<b>Retroalimentación</b></div>

        <p id="notice"><%= notice %></p>
        <br></br>
        <h1>Feedbacks</h1>

        <table>
          <thead>
            <tr>
              <th>Anotations</th>
              <th>Score</th>
              <th>Gradework</th>
              <th>User</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @feedbacks.each do |feedback| %>
              <tr>
                <td><%= feedback.anotations %></td>
                <td><%= feedback.score %></td>
                <td><%= feedback.gradework %></td>
                <td><%= feedback.user %></td>
                <td><%= link_to 'Show', feedback %></td>
                <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
                <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Feedback', new_feedback_path %>


    </section>
</div>
