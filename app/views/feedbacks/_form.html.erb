<%= form_for(feedback) do |f| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="full-field">
      <%= f.label "Anotaciones" %>
      <div class="field">      
      <%= f.text_area :anotations, :class => 'feed-input' %>
      </div>

      <%= f.label "Puntaje" %>
      <div class="field">    
        <%= f.number_field :score, :class => 'feed-input' %>
      </div>

      <%= f.label "Trabajo de Grado" %>
      <div class="field">
        <%= f.text_field :gradework, :class => 'feed-input' %>
      </div>
      
      <%= f.label "Usuario" %>
      <div class="field">    
        <%= f.text_field :user, :class => 'feed-input' %>
      </div>      
  </div>

  <div class="actions" >
        <%= f.submit "Crear", :class => 'feed-button' %>
  </div>
<% end %>
