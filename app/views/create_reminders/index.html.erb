<% content_for :head do %>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />
<% end %>
<div class="main-container">
    <%= render partial: "partials/user_panel" %>
    <div class="container-header">
        <h1>Recordarios</h1>
    </div>
    <div class="container">
        <form action="" method="">
            <div class="form-group">
                <label>Tesis:</label>
                <select class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="form-group">
                <label>Tipo de correo:</label>
                <select class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="form-group date col-md-4">
                <label for="inputDate">Fecha de envio:</label>
                <div class="input-group input-append date" id="datePicker">
                <input type="text" class="form-control" name="mailDate" />
                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label>Seleccione a quien desea enviar el correo:</label>
                <input type="checkbox" name="Director">Director<br>
                <input type="checkbox" name="Jury">Jurados<br>
                <input type="checkbox" name="Student">Estudiante<br>
            </div>
            <input type="hidden" name="state" value="">
            <button type="submit" class="btn btn-success">Agregar recordatorio</button>
            <button type="button" class="btn btn-warning">Cancelar</button>
        </form>
    </div>
</div>

