<% content_for :head do %>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />
<% end %>
<div class="main-container">

    <div class="container-header">
        <h1>Recordarios</h1>
    </div>
    <div class="container">
        <form action="" method="">
            <div class="form-group">
                <label>Tesis:</label>
                  <%= select_tag(:gradeworks, options_from_collection_for_select(@gradeworks ,:id, :name, @grad_tesis), :prompt => "Ninguno") %>
            </div>
            <div class="form-group">
                <label>Tipo de correo:</label>
                <%= select_tag(:mail_templates, options_from_collection_for_select(@mail_templates ,:id, :name, @templates_name), :prompt => "Ninguno") %>
            </div>
            <div class="form-group date col-md-4">
                <label for="inputDate">Fecha de envio:</label>
                <div class="input-group input-append date" id="datePicker">
                <input type="text" class="form-control" name="date" />
                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
          
            <div class="form-group">
                <label>Seleccione a quien desea enviar el correo:</label>
                <!-- <input type="checkbox" name="Director" value = "">Director<br>
                <input type="checkbox" name="Jury">Jurados<br>
                <input type="checkbox" name="Student">Estudiante<br> -->
                <%= label_tag @directorse, 'Director'%>
                <%= check_box_tag @grad_email_directors, 'Director', id: @directorse%>

                <%= label_tag @juriese, 'Jurado'%>
                <%= check_box_tag @grad_email_juries, 'Jurado', id: @juriese%>

                <%= label_tag @studentse, 'Estudiante'%>
                <%= check_box_tag @grad_email_students, 'Estudiante', id: @studentse%>
            </div>
            <input type="hidden" name="state" value="">
            <button type="submit" class="btn btn-success" onclick="new_create_reminder_path">Agregar recordatorio</button>
            <button type="button" class="btn btn-warning">Cancelar</button>
        </form>
    </div>
</div>

<% content_for :bottom do %>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $('#datePicker').datepicker({
            format: 'mm/dd/yyyy'
        })
        .on('changeDate', function(e) {
            // Revalidate the date field
        });
    </script>
<% end %>
