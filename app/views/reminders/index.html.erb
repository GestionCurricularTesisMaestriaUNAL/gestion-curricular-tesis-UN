<% content_for :head do %>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker3.min.css" />
<% end %>
<div class="main-container">
    <%= render partial: "partials/user_panel" %>
    <div class="container-header">
        <h1>Recordatorios</h1>
    </div>
    <div class="container">
        <div class="col-md-offset-3 col-md-6">
        <form action="" method="">
            <div class="form-group">
                <label>Tesis:</label>
                <!--<select class="form-control">
                    <option></option>
                </select>-->
                <%= select_tag(:gradeworks, options_from_collection_for_select(@gradeworks ,:id, :name, @grad_tesis), :prompt => "Ninguno") %>
            </div>
            <div class="form-group">
                <label>Tipo de correo:</label>
                <select class="form-control">
                    <option></option>
                </select>
            </div>
            <div class="form-group date">
                <label for="inputDate">Fecha de envio:</label>
                <div class="input-group input-append date" id="datePicker">
                <input type="text" class="form-control" name="mailDate" />
                <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12">Seleccione a quien desea enviar el correo:</label>
                <div class="checkbox-mailto">
                    <input style="margin-right:10px;" type="checkbox" name="Director">Director
                </div>
                <div class="checkbox-mailto">
                    <input style="margin-right:10px;" type="checkbox" name="Jury">Jurados
                </div>
                <div class="checkbox-mailto">
                    <input style="margin-right:10px;" type="checkbox" name="Student">Estudiante
                </div>
            </div>
            <input type="hidden" name="state" value="">
            <div class="reminder-buttons">
                <button type="submit" class="btn btn-success">Agregar recordatorio</button>
                <button type="button" class="btn btn-warning">Cancelar</button>
            </div>
        </form>
        </div>
    </div>
</div>

<% content_for :bottom do %>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $('#datePicker').datepicker({
            format: 'mm/dd/yyyy'
        })
        .on('changeDate', function(e) {
            // Revalidate the date field
        });
    </script>
<% end %>