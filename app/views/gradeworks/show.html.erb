<div class="container-fluid contenedorprincipal">
  <section role="main-content">
    <div class="breadcrumb-class">
      Está en:&nbsp;
      <a href="#" target="_self" title="Inicio"><b>Inicio</b></a>
    </div>
    <br>
    <div class="col-md-6 col-md-offset-3 form-container-gradework">
      <h1>Tesis</h1>
      <p id="notice"><%= notice %></p>
      <div class="margin-show-gradework">
        <p>
          <strong class="margin-field-show">Nombre:</strong>
          <%= @gradework.name %>
        </p>

        <p>
          <strong class="margin-field-show">Descripción:</strong>
          <%= @gradework.description %>
        </p>

        <p>
          <strong class="margin-field-show">Estado:</strong>
          <%= @gradework.status %>
        </p>

        <p>
          <strong class="margin-field-show">Delivery date:</strong>
          <%= @gradework.delivery_date %>
        </p>

        <p>
          <strong class="margin-field-show">Begin date:</strong>
          <%= @gradework.begin_date %>
        </p>

        <p>
          <strong class="margin-field-show">Hora:</strong>
          <%= @gradework.hour %>
        </p>

        <p>
          <strong class="margin-field-show">Ubicación:</strong>
          <%= @gradework.locale %>
        </p>

        <p>
          <strong class="margin-field-show">Semestre:</strong>
          <%= @gradework.semester %>
        </p>


        <table>
          <thead>
          <tr>
            <th class="table-head">Nombre</th>
            <th class="table-head">Apellido</th>
            <th class="table-head">Roles</th>

          </tr>
          </thead>

          <tbody>
          <% @gradework.users.each do |user| %>
          <tr>

                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>

                <td>
                  <% user.roles.each do |role| %>
                      <ul>
                        <%= role.name %>
                      </ul>
                  <% end %>
                </td>
          </tr>
          <% end %>
          </tbody>
        </table>


        <br>

        <p>
          <strong class="margin-field-show">Archivos:</strong>
        <table>
          <thead>
          <tr>
            <th class="table-head">Nombre</th>

          </tr>
          </thead>

          <tbody>
          <% @gradework.filegradeworks.each do |file| %>
              <tr>

                <td><%= file.name %></td>

              </tr>
          <% end %>
          </tbody>
        </table>

        </p>

      </div>
      <div class="text-center">
        <%= link_to 'Editar', edit_gradework_path(@gradework) %> |
        <%= link_to 'Atras', gradeworks_path %>
      </div>
    </div>
  </section>
</div>
